# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sh,ps1}]
indent_style = space
indent_size = 4

[*.proto]
indent_style = space
indent_size = 2

[*.graphql]
indent_style = space
indent_size = 2
